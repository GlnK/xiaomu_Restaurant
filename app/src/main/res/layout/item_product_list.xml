<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@drawable/item_bg">

    <ImageView
        android:id="@+id/id_iv_image"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:scaleType="center"
        android:src="@drawable/item_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/id_iv_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="小慕餐厅"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="2"
            android:text="小慕餐厅小慕餐厅小慕餐厅小慕餐厅小慕餐厅"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/id_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/id_iv_image"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/id_iv_image"
        android:text="30元"
        android:textColor="#fd8f50" />

    <ImageView
        android:id="@+id/id_iv_sub"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/id_iv_image"
        android:layout_alignParentRight="true"
        android:src="@drawable/sub" />

    <TextView
        android:id="@+id/id_tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/id_iv_image"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@id/id_iv_sub"
        android:text="2"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/id_iv_add"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/id_iv_image"
        android:layout_toLeftOf="@id/id_tv_count"
        android:src="@drawable/add" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#444444"></View>
</RelativeLayout>